# Dictionary App Configuration
# Copy this file to .env and customize

# Database Configuration
DATABASE_PATH=data/dictionary.db
DATABASE_ENCRYPTION_ENABLED=true
DATABASE_KEY_DERIVATION_ROUNDS=100000

# Plugin System
PLUGIN_DIRECTORY=plugins
PLUGIN_DEV_DIRECTORY=plugins-dev
PLUGIN_HOT_RELOAD=true
PLUGIN_SAFE_MODE=false

# Extension Marketplace
EXTENSION_REGISTRY_URL=https://raw.githubusercontent.com/dictionary-app/extensions/main/registry.json
EXTENSION_STORE_API=https://api.dictionary-app.com/v1/store
EXTENSION_UPDATE_CHECK_INTERVAL=86400  # 24 hours in seconds

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here  # Only for admin operations, keep secure!

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here  # Keep this secure!
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_CORE_APP=price_your_core_app_price_id  # $20 core app license

# License & Authentication (now via Supabase)
LICENSE_OFFLINE_GRACE_PERIOD=604800  # 7 days in seconds
AUTH_SESSION_DURATION=2592000  # 30 days in seconds
ENABLE_GUEST_MODE=true
GUEST_SEARCH_LIMIT=50

# Development
DEBUG_MODE=false
LOG_LEVEL=INFO
LOG_FILE=logs/dictionary-app.log
DEVELOPER_MODE=false

# Performance
CACHE_SIZE_MB=100
SEARCH_CACHE_TTL=3600  # 1 hour in seconds
MAX_PLUGIN_MEMORY_MB=50

# UI Settings (used by core-ui plugin)
DEFAULT_HOTKEY=Ctrl+Ctrl
STARTUP_MINIMIZED=false
AUTO_START_WITH_SYSTEM=false
SHOW_IN_SYSTEM_TRAY=true

# Paths
TEMP_DIRECTORY=temp
BUILD_DIRECTORY=build
BACKUP_DIRECTORY=backups